<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context" xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">

	<mvc:resources mapping="/css/**" location="/html/css/" cache-period="1000" />
	<mvc:resources mapping="/js/**" location="/html/js/" cache-period="1000" />
	<mvc:resources mapping="/img/**" location="/html/img/" cache-period="1000" />
	<mvc:resources mapping="/pt/**" location="/html/pt/" cache-period="1000" />
	<mvc:resources mapping="/upload/**" location="file:/data/upload/" />
	<mvc:resources mapping="/**" location="/html/" cache-period="1000" />

</beans>