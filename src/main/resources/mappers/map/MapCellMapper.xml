<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.kancolle.server.mapper.map.MapCellMapper">

	<cache type="org.mybatis.caches.ehcache.EhcacheCache">
		<property name="eternal" value="true"/>
		<property name="maxEntriesLocalHeap" value="500"/>
		<property name="strategy" value="NONE"/>
	</cache>

	<resultMap id="MapCellRM" type="MapCellModel" autoMapping="false">
		<id property="api_id" column="ID"/>
		<result property="api_map_no" column="MAP_NO" />
		<result property="name" column="NAME" />
		<result property="api_maparea_id" column="MAPAREA_ID" />
		<result property="api_mapinfo_no" column="MAPINFO_NO" />
		<result property="api_no" column="NO" />
		<result property="api_color_no" column="COLOR_NO" />
	</resultMap>

    <resultMap type="MapCellNext" id="MapCellNextRM" autoMapping="false">
        <id property="cellId" column="CELL_ID"/>
        <result property="mapareaId" column="MAPAREA_ID"/>
        <result property="mapinfoId" column="MAPINFO_ID"/>
        <result property="no" column="NO"/>
        <result property="colorNo" column="COLOR_NO"/>
        <result property="eventId" column="EVENT_ID"/>
        <result property="eventKind" column="EVENT_KIND"/>
        <result property="next" column="NEXT"/>
        <result property="bossCellNo" column="BOSS_CELL_NO"/>
        <result property="commentKind" column="COMMENT_KIND"/>
        <result property="productionKind" column="PRODUCTION_KIND"/>
    </resultMap>

	<sql id="selectMapCell">
		SELECT ID, `NO`, `NAME`, COLOR_NO, MAP_NO, MAPAREA_ID, MAPINFO_NO FROM t_map_cell
	</sql>

	<select id="selectMapCells" resultMap="MapCellRM">
		<include refid="selectMapCell"/>
	</select>

	<select id="selectMapCellById" resultMap="MapCellRM">
		<include refid="selectMapCell"/> WHERE ID = #{map_cell_id}
	</select>

    <select id="selectMapCellNextById" resultMap="MapCellNextRM">
		SELECT * FROM t_map_cell_traveller t WHERE t.CELL_ID = #{cellId}
	</select>

	<insert id="replaceMapCell">
		INSERT INTO `kancolle`.`t_map_cell` (`ID`, `NO`, `COLOR_NO`, `MAP_NO`, `MAPAREA_ID`, `MAPINFO_NO`) VALUES (#{ID}, #{NO}, #{COLOR_NO}, #{MAP_NO}, #{MAPAREA_ID}, #{MAPINFO_NO})
		ON DUPLICATE KEY
		UPDATE `NO`=#{NO}, `COLOR_NO`=#{COLOR_NO}, `MAP_NO`=#{MAP_NO}, `MAPAREA_ID`=#{MAPAREA_ID}, `MAPINFO_NO`=#{MAPINFO_NO}
	</insert>
</mapper>